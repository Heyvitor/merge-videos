{
    "version": 2,
    "builds": [
      {
        "package": {
          "type": "docker",
          "name": "n8n-api"
        },
        "source": {
          "type": "github",
          "repo_url": "https://github.com/Heyvitor/merge-videos.git",
          "branch": "main"
        },
        "targets": [
          {
            "context": {
              "cmd": ["docker-compose", "-f", "./docker-compose.yml"]
            }
          }
        ]
      }
    ],
    "deployments": [
      {
        "name": "n8n-api",
        "version": "1.0.0",
        "build": {
          "builder": "docker-compose"
        },
        "startCommand": "python main.py",
        "restartPolicy": "on-failure"
      }
    ]
  }